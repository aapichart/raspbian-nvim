{
  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },
  // diagnostics
  "codeLens.enable": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  "diagnostic.displayByAle": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": "√",
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "sql",
    "bash",
    "vim"
  ],
  "coc.preferences.hoverTarget": "float",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // snippets
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],

// explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
//  "explorer.previewAction.onHover": false,
//  "explorer.keyMappings": {
//    "<cr>": ["expandable?", "expand", "open"],
//    "v": "open:vsplit"
//},

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "languageserver": {
  "intelephense": {
    "command": "intelephense",
    "args": ["--stdio"],
    "filetypes": ["php"],
    "initializationOptions": {
      "storagePath": "/tmp/intelephense"
    }
  },
  "languageserver": {
  "sql": {
    "command": "sql-language-server",
    "args" : ["up", "--method", "stdio"],
    "filetypes": ["sql", "mysql"]
    }
  }
}
  // TODO language servers
  // TODO g:coc_global_extensions
  // TODO b:coc_suggest_disable=1 GOYO
  // TODO add to paths.vim g:coc_node_path
}
